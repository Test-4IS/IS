<?xml version='1.0' encoding='utf-8'?>
<widget id="com.i4is.dev.I4IS" version="1.1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>I4IS</name>
    <description>
        I4IS Mobile App - Astrophysics.
    </description>
    <author email="jeremy.clark@i4is.org" href="https://i4is.org">
        I4IS mobile app development
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <splash density="land-hdpi" src="res/drawable-land-hdpi/screen.png" />
		<splash density="land-ldpi" src="res/drawable-land-ldpi/screen.png" />
        <splash density="land-mdpi" src="res/drawable-land-mdpi/screen.png" />
        <splash density="land-xhdpi" src="res/drawable-land-xhdpi/screen.png" />
        <splash density="land-xxhdpi" src="res/drawable-land-xxhdpi/screen.png" />
        <splash density="land-xxxhdpi" src="res/drawable-land-xxxhdpi/screen.png" />
        <splash density="hdpi" src="res/drawable-port-hdpi/screen.png" />
		<splash density="ldpi" src="res/drawable-port-ldpi/screen.png" />
        <splash density="mdpi" src="res/drawable-port-mdpi/screen.png" />
        <splash density="xhdpi" src="res/drawable-port-xhdpi/screen.webp" />
        <splash density="xxhdpi" src="res/drawable-port-xxhdpi/screen.png" />
        <splash density="xxxhdpi" src="res/drawable-port-xxxhdpi/screen.png" />
		<icon src="res/mipmap-hdpi/ic_launcher.png" platform="android" width="72" height="72" density="hdpi" />
		<icon src="res/mipmap-ldpi/ic_launcher.png" platform="android" width="36" height="36" density="ldpi" />
		<icon src="res/mipmap-mdpi/ic_launcher.png" platform="android" width="48" height="48" density="mdpi" />
		<icon src="res/mipmap-xhdpi/ic_launcher.png" platform="android" width="96" height="96" density="xhdpi" />
		<icon src="res/mipmap-xxhdpi/ic_launcher.png" platform="android" width="144" height="144" density="xxhdpi" />
		<icon src="res/mipmap-xxxhdpi/ic_launcher.png" platform="android" width="192" height="192" density="xxxhdpi" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
